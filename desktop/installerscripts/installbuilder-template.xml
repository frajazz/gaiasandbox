<project>
    <shortName>gaiasandbox</shortName>
    <fullName>Gaia Sandbox</fullName>
    <version>@version-tag@</version>
    <readmeFile>@gs-release-folder@/README.md</readmeFile>
    <licenseFile>@gs-release-folder@/LICENSE</licenseFile>
    <logoImage>@gs-git-folder@/android/assets/icon/ic_launcher_s.png</logoImage>
    <splashImage>@gs-git-folder@/android/assets/img/splash/splash-s.png</splashImage>
    <wmImage>@gs-git-folder@/android/assets/icon/ic_launcher.png</wmImage>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>@gs-release-folder@/conf</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>@gs-release-folder@/data</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>@gs-release-folder@/lib</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>@gs-release-folder@/scripts</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>@gs-release-folder@/AUTHORS</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>@gs-release-folder@/gaiasandbox</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>@gs-release-folder@/gaiasandbox.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>@gs-release-folder@/LICENSE</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>@gs-release-folder@/README.md</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>@gs-release-folder@/gaiasandbox.bat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>@gs-release-folder@/ic_launcher.ico</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>@gs-release-folder@/ic_launcher.png</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>@gs-release-folder@/ic_launcher.svg</origin>
                        </distributionFile>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux linux-x64 osx</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>@gs-release-folder@/ic_launcher.svg</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>@gs-release-folder@/ic_launcher.ico</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>shortcut linux</description>
                    <destination>${env(HOME)}/.local/share/applications</destination>
                    <name>shortcutlinux</name>
                    <platforms>linux linux-x64</platforms>
                    <shortcutList>
                        <shortcut>
                            <comment>Gaia Sandbox 3D astronomy software to observe the galaxy and beyond</comment>
                            <exec>${installdir}/gaiasandbox</exec>
                            <icon>${installdir}/ic_launcher.svg</icon>
                            <name>gaiasandbox</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/gaiasandbox.bat</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon>${installdir}/ic_launcher.ico</windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>${product_fullname} 3D astronomy software</comment>
                    <name>${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/gaiasandbox.bat</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/ic_launcher.ico</windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <preInstallationActionList>
        <autodetectJava>
            <promptUser>0</promptUser>
        </autodetectJava>
    </preInstallationActionList>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <outputDirectory>@gs-git-folder@/releases</outputDirectory>
    <vendor>ARI - Universit√§t Heidelberg</vendor>
    <windowsExecutableIcon>@gs-git-folder@/android/assets/icon/ic_launcher.ico</windowsExecutableIcon>
    <windowsUninstallerExecutableIcon>@gs-git-folder@/android/assets/icon/ic_launcher.ico</windowsUninstallerExecutableIcon>
    <licenseFileList>
        <licenseFile>
            <code>en</code>
            <file>@gs-release-folder@/LICENSE</file>
        </licenseFile>
    </licenseFileList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
    </parameterList>
    <platformOptionsList>
        <platformOptions>
            <platform>deb</platform>
        </platformOptions>
        <platformOptions>
            <platform>linux-x64</platform>
            <requireInstallationByRootUser>0</requireInstallationByRootUser>
        </platformOptions>
        <platformOptions>
            <platform>linux</platform>
            <requireInstallationByRootUser>0</requireInstallationByRootUser>
        </platformOptions>
    </platformOptionsList>
</project>

